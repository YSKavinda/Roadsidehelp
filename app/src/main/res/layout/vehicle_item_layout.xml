<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_weight="3"
    android:background="@drawable/bg_border">
    <ImageView
        android:id="@+id/vehicle_item_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/_875984_auto_car_repair_service_icon"
        android:background="@drawable/bg_border"
        android:padding="5dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="2"
    android:paddingHorizontal="10dp">
    <TextView
        android:id="@+id/vehicle_item_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Vehicle Model"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/vehicle_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="category"
        android:layout_marginVertical="5dp"/>
    <TextView
        android:id="@+id/vehicle_item_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Licese_Plate"
        android:layout_marginVertical="5dp"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vehicle_item_status"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="Status"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"/>
        <Button
            android:id="@+id/vehicle_item_button"
            android:layout_width="140dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/red"
            android:layout_height="match_parent"
            android:text="Remove"
            />
    </LinearLayout>

</LinearLayout>


</LinearLayout>