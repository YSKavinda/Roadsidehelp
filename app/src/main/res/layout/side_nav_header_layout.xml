<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/sideNavProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:scaleType="fitCenter"
        android:drawable= "@drawable/steering_wheel_white"
         />

    <TextView
        android:id="@+id/sideNavName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yasiru Kavinda"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:textSize="28dp" />
    
    <TextView
        android:id="@+id/sideNavEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="yskavinda@javainstitute.lk"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:textSize="16dp" />
</FrameLayout>