<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_weight="3"
    android:background="@drawable/bg_border">
    <ImageView
        android:id="@+id/vehicle_item_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/towtruck"
        android:scaleType="fitCenter"
        android:background="@drawable/bg_border"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:paddingHorizontal="10dp">
        <TextView
            android:id="@+id/tow_truck_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:id="@+id/tow_truck_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="contact"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/tow_truck_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Address"
            android:layout_marginVertical="5dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tow_truck_distance"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="distance"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray"/>
            <Button
                android:id="@+id/tow_truck_location_button"
                android:layout_width="140dp"
                android:layout_gravity="end"
                android:backgroundTint="@color/red"
                android:layout_height="match_parent"
                android:text="Get Location"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>